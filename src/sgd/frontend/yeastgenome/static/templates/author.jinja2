{% extends "global_layout.jinja2" %}

{% block title %}{{ author.display_name }}{% endblock %}

{% block head %}
<script>
	var display_name = "{{ author.display_name }}";
  	var download_link = "{{download_citations_link}}";
    var reference_data = {{references | safe}};
</script>
{% endblock %}


{% block body %}

<div id="center_title" class="row">
	<h2>Author: <span class="gene_name">{{ author.display_name }}</span></h2>
</div>

<!-- Navbar
================================================== -->
<div class="row">
	
    <!-- Includes navbar.html into template -->
    {% include "navbar.jinja2" %}

    <div class="small-12 large-9 columns content-column">

        <script>
            add_navbar_title("Author: <span class='gene_name'>{{ author.display_name }}</span>");
            add_navbar_element('References', 'references');
        </script>

<!-- References
================================================== -->
        <section id="references" data-magellan-destination="references">
            <div class="page-header">
                <h1>References <span id="references_header" class="label secondary round"></span></h1>
                <p id="references_message" hidden>No citations for this author.</p>
                <div id="references_wrapper">
                    <a id="export_references" class="small radius button secondary"><i class="fa fa-download"></i> Download References (.nbib)</a>
                    <ul id="references_list" class="literature-list">
                    </ul>
                </div>
            </div>
        </section>

    </div>
</div>

{% block scripts %}
<script src="/static/js/author.js"></script>
{% endblock scripts %}

{% endblock body %}
